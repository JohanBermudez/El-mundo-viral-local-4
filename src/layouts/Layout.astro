---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
  description?: string;
}

const { title, description = 'El Mundo Viral - Tu portal de noticias moderno' } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <title>{title} | El Mundo Viral</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  </head>
  <body class="min-h-screen flex flex-col bg-gray-100 font-['Inter',sans-serif]">
    <Header />
    <main class="flex-grow container mx-auto py-6 pt-6">
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style is:global>
  :root {
    --font-fallback: -apple-system, BlinkMacSystemFont, Segoe UI, Helvetica, Arial, sans-serif, Apple Color Emoji, Segoe UI Emoji;
    --font-body: 'Inter', var(--font-fallback);
    --font-heading: 'Inter', var(--font-fallback);
  }
  
  body {
    font-family: var(--font-body);
    color: #262626; /* Instagram text color */
  }
  
  /* Instagram-inspired animations */
  @keyframes like-animation {
    0%, 100% { transform: scale(1); }
    50% { transform: scale(1.2); }
  }
  
  .like-button:active svg {
    animation: like-animation 0.3s ease-in-out;
    fill: rgb(237, 73, 86);
    color: rgb(237, 73, 86);
  }
  
  /* Hide scrollbars for story style ui */
  .story-scrollbar {
    -ms-overflow-style: none;
    scrollbar-width: none;
  }
  
  .story-scrollbar::-webkit-scrollbar {
    display: none;
  }
  
  /* Add a subtle hover effect to instagram cards */
  .instagram-card, .instagram-card-horizontal {
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }
  
  .instagram-card:hover, .instagram-card-horizontal:hover {
    transform: translateY(-3px);
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.05);
  }
  
  /* Hide scrollbars for category cards in header */
  .scrollbar-none {
    -ms-overflow-style: none;
    scrollbar-width: none;
  }
  
  .scrollbar-none::-webkit-scrollbar {
    display: none;
  }
</style>
